{
	"repositories" : [
	{
		"type": "vcs",
		"url": "https://www.github.com/IGBIllinois/IGBIllinois-php"
	}
	],
	"require": {
		"php":	">=7.2",
		"components/bootstrap-default": "2.3.2",
		"components/bootstrap": "2.3.2",
		"components/jquery": "1.10.2",
		"components/jqueryui": "1.12.1",
		"igbillinois/igbillinois-php": "0.1"
	},
	"scripts": {
		"post-update-cmd": [
		"mkdir -p html/vendor/components",
		"cp -R vendor/components/bootstrap html/vendor/components/",
		"cp -R vendor/components/jquery html/vendor/components/",
		"cp -R vendor/components/jqueryui html/vendor/components/"
		]

	}
}

